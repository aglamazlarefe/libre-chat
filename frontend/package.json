{
  "name": "frontend",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "cross-env PUBLIC_API_URL=https://medical-llm-proxy.vercel.app/api/openrouterProxy astro dev",
    "start": "astro dev",
    "build": "astro check && astro build && rm -rf ../src/libre_chat/webapp && cp -R dist ../src/libre_chat/webapp",
    "preview": "astro preview",
    "astro": "astro"
  },
  "dependencies": {
    "@astrojs/check": "^0.4.1",
    "@astrojs/solid-js": "^4.0.1",
    "@astrojs/tailwind": "^5.1.0",
    "@nanostores/solid": "^0.4.2",
    "astro": "^4.1.1",
    "daisyui": "^4.5.0",
    "dompurify": "^3.0.8",
    "marked": "^11.1.1",
    "nanostores": "^0.9.5",
    "solid-js": "^1.8.9",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.9",
    "@types/dompurify": "^3.0.5",
    "@types/node": "18.14.1",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "@vite-pwa/astro": "^0.2.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.36.0",
    "eslint-plugin-astro": "^0.24.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-solid": "latest",
    "prettier": "^3.0.0",
    "prettier-plugin-astro": "^0.11.0"
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "singleQuote": true,
    "bracketSpacing": false,
    "arrowParens": "avoid",
    "useTabs": false,
    "printWidth": 120,
    "pluginSearchDirs": [
      "."
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "plugin:astro/recommended",
      "plugin:solid/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "solid",
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/ban-ts-comment": "off"
    },
    "overrides": [
      {
        "files": [
          "*.astro"
        ],
        "parser": "astro-eslint-parser",
        "parserOptions": {
          "parser": "@typescript-eslint/parser",
          "extraFileExtensions": [
            ".astro"
          ]
        }
      }
    ],
    "ignorePatterns": [
      "*.lock"
    ]
  }
}
